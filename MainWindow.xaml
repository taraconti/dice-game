        <Image x:Key="DiceImage1b" Source="dice1.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage2b" Source="dice2.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage3b" Source="dice3.png" Stretch="Fill" ></Image>
