        <Image x:Key="DiceImage4c" Source="dice4.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage5c" Source="dice5.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage6c" Source="dice6.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage1d" Source="dice1.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage2d" Source="dice2.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage3d" Source="dice3.png" Stretch="Fill" ></Image>
        <Image x:Key="DiceImage4d" Source="dice4.png" Stretch="Fill" ></Image>
